{
    "name": "stream-processor",
    "version": "0.1.0",
    "description": "Node streams processor with built-in flap map operations",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "scripts": {
        "test": "jest --watch",
        "test:ci": "jest --coverage --forceExit --detectOpenHandles",
        "lint": "tslint -p tsconfig.json './src/**/*.ts' './__tests__/**/*.ts'",
        "build": "rm -rf build && tsc -d --noEmitOnError",
        "prepare": "npm run build"
    },
    "license": "MIT",
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "23.3.12",
        "@types/node": "10.12.18",
        "husky": "1.3.1",
        "jest": "23.6.0",
        "ts-jest": "23.10.5",
        "tslint": "5.11.0",
        "tslint-eslint-rules": "5.4.0",
        "typescript": "3.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    }
}
